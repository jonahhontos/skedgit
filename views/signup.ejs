<div class="row">
  <div class="login col s6 offset-s3">

    <h2 style="text-align:center; margin-top:60px">Sign Up</h2>

  <% if(message.length > 0) {%>
    <div id="flash-alert2" style="background-color: rgba(214, 61, 61, 0.64); color: rgb(154, 20, 13); border-radius: 3px; text-align: center; padding: 5px 5px 5px 5px; width: 250px"><%= message %></div>
    <% } %>

  <form action="/users/signup" method="post" class="col s12">

    <div class="row">
      <div class="input-field col s12">
        <input name="name" type="text" placeholder="Name">
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <input name="email" type="email" class="validate" placeholder="Email">
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <input name="password" type="password" class="validate" placeholder="Password">
      </div>
    </div>

    <div class="row">
      <div class="col s12" style="text-align:center">
        <button class="btn-large waves-effect waves-blue waves-ripple" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </div>
  </form>

  <div class="row">
    <div class="col s12 ">
      <div style="width: 100%; height: 20px; border-bottom: 1px solid black; text-align: center">
        <span style="font-size: 20px; background-color: white; padding: 0 20px; font-style:italic">or</span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12" style="text-align:center">
      <a href="/"><i class="material-icons medium">home</i></a>
    </div>
  </div>


</div>
</div>

<script type="text/javascript">
  function slideAlertUp2(){
    $('#flash-alert2').slideUp(400)
  }
  var slideAlert = window.setTimeout(slideAlertUp2, 3000)
</script>
